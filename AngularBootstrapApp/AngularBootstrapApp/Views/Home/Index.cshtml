<!DOCTYPE html>
<html data-ng-app="angularBootstrapApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/angular")
    @Styles.Render("~/Content/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/ng-tags-input.css" rel="stylesheet" />
</head>
<body data-ng-controller="GlobalController">
    
    <nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Angular UI Bootstrap</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Input Controls <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#" data-ng-click="setTemplate('InputControls','Datepicker')">Datepicker</a></li>
            <li><a href="#" data-ng-click="setTemplate('InputControls','Typeahead')"> Typeahead</a></li>
            <li><a href="#"  data-ng-click="setTemplate('InputControls','TagsInput')">Tags Input</a></li>            
          </ul>
        </li>
           <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">UI Controls <span class="caret"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="#"  data-ng-click="setTemplate('UIControls','Accordian')">Accordian</a></li>
            <li><a href="#"  data-ng-click="setTemplate('UIControls','Carousel')">Carousel</a></li>
            <li><a href="#"  data-ng-click="setTemplate('UIControls','Modals')">Modals</a></li>            
          </ul>
        </li>
      </ul>
      <form class="navbar-form navbar-left" role="search">
        <div class="form-group">
          <input type="text" ng-model="templateSelected" typeahead-on-select="selectTemplate($item, $model, $label)" placeholder="Modules e.g. Accordian" uib-typeahead="module as module.action for module in getModules($viewValue)" 
              typeahead-loading="loadingModules" typeahead-no-results="noResults" class="form-control bg-default">

        </div>
        
      </form>
     
    </div>
  </div>
</nav>
    

     @Scripts.Render("~/bundles/jquery")

    
     @Scripts.Render("~/bundles/angular")
     @Scripts.Render("~/bundles/bootstrap")    
    <script src="~/Scripts/angularjs-dropdown-multiselect.js"></script>
    <script src="~/App/app.js"></script>
    <script src="~/App/Controllers/Global/globalController.js"></script>
    <script src="~/App/Controllers/InputControls/typeaheadController.js"></script>
    <script src="~/App/Services/InputControls/typeaheadService.js"></script>  
    <script src="~/App/Controllers/InputControls/datepickerController.js"></script>
    <script src="~/App/Controllers/InputControls/tagsInputController.js"></script>
    <script src="~/App/Services/InputControls/tagsInputService.js"></script>
    <script src="~/App/Controllers/UIControls/carouselController.js"></script>
    <script src="~/App/Controllers/UIControls/accordianController.js"></script>
    <script src="~/App/Controllers/UIControls/modalsController.js"></script>
    <ng-include src="currentTemplate"> </ng-include>
   
</body>
</html>
